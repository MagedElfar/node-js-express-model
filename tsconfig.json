{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",   
    "removeComments": true, 
    "outDir": "./dist",
    "rootDir": "./src",
    "esModuleInterop": true,
    "noEmitOnError": true,                           
    "forceConsistentCasingInFileNames": true,
    "strict": true,                               
    "skipLibCheck": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "strictPropertyInitialization": false,
    "typeRoots": ["./src/types"],
    "types": ["index.d.ts"]
  },

  "include": ["src/**/*.ts", "./../test/**/*.ts"],
  "exclude": [
    "node_modules"
  ]
}
